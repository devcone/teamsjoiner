<Window x:Class="PixelBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PixelBot"
        mc:Ignorable="d"
        Title="PixelBot" Height="200" Width="300" ResizeMode="NoResize" Background="#FF2C2C2C">
    <Grid>
        <Button Name="ButtonSearchPixel" Click="OnButtonSearchPixelClick" Content="Search Pixel" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Center" Width="200" Height="30"/>
        <TextBox Name="TextBoxHexColor" HorizontalAlignment="Center" Margin="0,0,0,50" TextWrapping="Wrap" Text="#ffffff" VerticalAlignment="Center" Width="200" Height="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
